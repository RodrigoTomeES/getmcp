{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "config": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "command": {
              "type": "string",
              "minLength": 1
            },
            "args": {
              "default": [],
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "env": {
              "default": {},
              "type": "object",
              "propertyNames": {
                "type": "string"
              },
              "additionalProperties": {
                "type": "string"
              }
            },
            "transport": {
              "default": "stdio",
              "type": "string",
              "const": "stdio"
            },
            "cwd": {
              "type": "string"
            },
            "timeout": {
              "type": "integer",
              "exclusiveMinimum": 0,
              "maximum": 9007199254740991
            },
            "description": {
              "type": "string"
            }
          },
          "required": ["command", "args", "env", "transport"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "format": "uri"
            },
            "transport": {
              "type": "string",
              "enum": ["http", "streamable-http", "sse"]
            },
            "headers": {
              "default": {},
              "type": "object",
              "propertyNames": {
                "type": "string"
              },
              "additionalProperties": {
                "type": "string"
              }
            },
            "timeout": {
              "type": "integer",
              "exclusiveMinimum": 0,
              "maximum": 9007199254740991
            },
            "description": {
              "type": "string"
            }
          },
          "required": ["url", "headers"],
          "additionalProperties": false
        }
      ]
    },
    "package": {
      "type": "string"
    },
    "runtime": {
      "type": "string",
      "enum": ["node", "python", "docker", "binary"]
    },
    "repository": {
      "type": "string",
      "format": "uri"
    },
    "homepage": {
      "type": "string",
      "format": "uri"
    },
    "author": {
      "type": "string"
    },
    "categories": {
      "default": [],
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "developer-tools",
          "web",
          "automation",
          "data",
          "search",
          "ai",
          "cloud",
          "communication",
          "design",
          "documentation",
          "devops",
          "utilities",
          "security",
          "gaming"
        ]
      }
    },
    "requiredEnvVars": {
      "default": [],
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "windows": {
      "type": "object",
      "properties": {
        "command": {
          "type": "string",
          "minLength": 1
        },
        "args": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "env": {
          "type": "object",
          "propertyNames": {
            "type": "string"
          },
          "additionalProperties": {
            "type": "string"
          }
        },
        "cwd": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "linux": {
      "type": "object",
      "properties": {
        "command": {
          "type": "string",
          "minLength": 1
        },
        "args": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "env": {
          "type": "object",
          "propertyNames": {
            "type": "string"
          },
          "additionalProperties": {
            "type": "string"
          }
        },
        "cwd": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "macos": {
      "type": "object",
      "properties": {
        "command": {
          "type": "string",
          "minLength": 1
        },
        "args": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "env": {
          "type": "object",
          "propertyNames": {
            "type": "string"
          },
          "additionalProperties": {
            "type": "string"
          }
        },
        "cwd": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "$schema": {
      "type": "string"
    }
  },
  "required": ["id", "name", "description", "config", "categories", "requiredEnvVars"],
  "additionalProperties": false
}

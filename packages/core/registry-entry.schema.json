{
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "config": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "command": {
              "type": "string",
              "minLength": 1
            },
            "args": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": []
            },
            "env": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              },
              "default": {}
            },
            "transport": {
              "type": "string",
              "const": "stdio",
              "default": "stdio"
            },
            "cwd": {
              "type": "string"
            },
            "timeout": {
              "type": "integer",
              "exclusiveMinimum": 0
            },
            "description": {
              "type": "string"
            }
          },
          "required": [
            "command"
          ],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "format": "uri"
            },
            "transport": {
              "type": "string",
              "enum": [
                "http",
                "streamable-http",
                "sse"
              ]
            },
            "headers": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              },
              "default": {}
            },
            "timeout": {
              "type": "integer",
              "exclusiveMinimum": 0
            },
            "description": {
              "type": "string"
            }
          },
          "required": [
            "url"
          ],
          "additionalProperties": false
        }
      ]
    },
    "package": {
      "type": "string"
    },
    "runtime": {
      "type": "string",
      "enum": [
        "node",
        "python",
        "docker",
        "binary"
      ]
    },
    "repository": {
      "type": "string",
      "format": "uri"
    },
    "homepage": {
      "type": "string",
      "format": "uri"
    },
    "author": {
      "type": "string"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "developer-tools",
          "web",
          "automation",
          "data",
          "search",
          "ai",
          "cloud",
          "communication",
          "design",
          "documentation",
          "devops",
          "utilities",
          "security",
          "gaming"
        ]
      },
      "default": []
    },
    "requiredEnvVars": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "windows": {
      "type": "object",
      "properties": {
        "command": {
          "type": "string",
          "minLength": 1
        },
        "args": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "env": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "cwd": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "linux": {
      "type": "object",
      "properties": {
        "command": {
          "type": "string",
          "minLength": 1
        },
        "args": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "env": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "cwd": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "macos": {
      "type": "object",
      "properties": {
        "command": {
          "type": "string",
          "minLength": 1
        },
        "args": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "env": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "cwd": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "id",
    "name",
    "description",
    "config"
  ],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}

{
  "name": "@mcp-hub/cli",
  "version": "0.1.0",
  "description": "CLI tool to install MCP servers into any AI application with one command",
  "type": "module",
  "bin": {
    "mcp-hub": "./dist/bin.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "cli",
    "installer",
    "claude-desktop",
    "cursor",
    "vscode",
    "windsurf",
    "cline",
    "roo-code",
    "goose",
    "opencode",
    "zed",
    "ai-tools"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mcp-hub/mcp-hub.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/mcp-hub/mcp-hub/tree/main/packages/cli#readme",
  "bugs": {
    "url": "https://github.com/mcp-hub/mcp-hub/issues"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@mcp-hub/core": "^0.1.0",
    "@mcp-hub/generators": "^0.1.0",
    "@mcp-hub/registry": "^0.1.0",
    "@inquirer/prompts": "^7.0.0"
  }
}

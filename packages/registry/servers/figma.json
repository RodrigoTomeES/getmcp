{
  "$schema": "https://getmcp.es/registry-entry.schema.json",
  "id": "figma",
  "name": "Figma",
  "description": "Read Figma design files and provide layout information to AI coding agents. Translate designs into code with accurate context from Figma files",
  "config": {
    "command": "npx",
    "args": ["-y", "figma-developer-mcp", "--stdio"],
    "env": {
      "FIGMA_API_KEY": ""
    },
    "transport": "stdio"
  },
  "package": "figma-developer-mcp",
  "runtime": "node",
  "repository": "https://github.com/GLips/Figma-Context-MCP",
  "homepage": "https://github.com/GLips/Figma-Context-MCP",
  "author": "GLips",
  "categories": ["design", "developer-tools"],
  "requiredEnvVars": ["FIGMA_API_KEY"]
}

{
  "name": "@getmcp/registry",
  "version": "0.8.0",
  "description": "Registry of popular MCP server definitions in canonical format",
  "keywords": [
    "brave-search-mcp",
    "filesystem-mcp",
    "github-mcp",
    "mcp",
    "model-context-protocol",
    "registry",
    "server-directory"
  ],
  "homepage": "https://github.com/RodrigoTomeES/getmcp/tree/main/packages/registry#readme",
  "bugs": {
    "url": "https://github.com/RodrigoTomeES/getmcp/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RodrigoTomeES/getmcp.git",
    "directory": "packages/registry"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "node scripts/validate-servers.js && tsc && node scripts/copy-servers.js",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@getmcp/core": "*"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
